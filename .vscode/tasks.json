{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile and run C",
            "type": "shell",
            "command": "gcc -g  main.c -o main.exe  && .\\main.exe ",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "build active file",
            "command": "make all",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
          },
          {
            "type": "shell",
            "label": "g++ build & run active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
              "${file}",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
              "cwd": "C:\\MinGW64\\bin"
            }
          }
    ]
}