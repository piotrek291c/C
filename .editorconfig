
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
# trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.c, *.h]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
trim_trailing_whitespace = true

# Matches the exact files either *.json
[*.json]
indent_style = space
indent_size = 4
